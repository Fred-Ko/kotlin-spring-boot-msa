{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "$id" : "http://example.com/schemas/user_event_deleted.json",
  "title" : "UserEvent.Deleted",
  "description" : "User deleted event schema",
  "type" : "object",
  "properties" : {
    "type" : {
      "type" : "string",
      "description" : "Event type discriminator for kotlinx.serialization"
    },
    "id" : {
      "type" : "string",
      "pattern" : "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description" : "User ID (UUID format)"
    },
    "eventId" : {
      "type" : "string",
      "pattern" : "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description" : "Event ID (UUID format)"
    },
    "occurredAt" : {
      "type" : "string",
      "format" : "date-time",
      "description" : "ISO-8601 timestamp when the event occurred"
    }
  },
  "required" : [ "type", "id", "eventId", "occurredAt" ],
  "additionalProperties" : false
}